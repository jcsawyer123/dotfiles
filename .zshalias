#!/usr/bin/env/zsh

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../../"
alias ~="cd ~"
alias -- -="cd -"

# Shortcuts
alias zshconfig="nano ~/dotfiles/.zshrc"
alias zshreload=". ~/.zshrc"
alias zshalias="nano ~/dotfiles/.zshalias"
alias zshsync="~/dotfiles/bootstrap.sh"
alias ohmyzsh="nano ~/.oh-my-zsh"
alias sn="shutdown now"

# Utility 
alias pls="sudo"

alias cl="colorls --group-directories-first --almost-all"
alias cll="colorls --group-directories-first --almost-all --long"
alias cls="colorls"


